{
  "name": "svhaui-helper",
  "private": true,
  "version": "2.4.0",
  "type": "module",
  "license": "GPL-3.0-only",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:minify": "tsc && cross-env MINIFY=true vite build",
    "build:dev": "tsc && cross-env DEV_CHANNEL=true vite build",
    "build:all": "rimraf dist && pnpm build && pnpm build:minify",
    "preview": "vite preview",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build:docs": "typedoc",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{css,scss}": [
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.0.0",
    "@techstark/opencv-js": "4.12.0-release.1",
    "@types/node": "^25.0.8",
    "cross-env": "^10.1.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.5.0",
    "rimraf": "^6.1.2",
    "sass-embedded": "^1.97.3",
    "tesseract.js": "^7.0.0",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.0.0",
    "vite": "^7.1.3",
    "vite-plugin-monkey": "^7.1.1"
  }
}
